{% if articles|length > 0 %}
    {% for article in articles %}
               <div class="col-lg-2 col-md-2 p-1 col-sm-2 produit" title="{{article.titre}}" data-toggle="tooltip" data-placement="top" data-bs-toggle="modal" data-bs-target="#detProd" data-id="{{article.id}}">
                    <div  class="div-img ">  
                        <img class="img-produit " src="{{ asset('img/dolip.png') }}"  alt="Image de ">
                        <div class=" col-sm-12 name-produit Limit_text">
                            {{article.titre}}
                        </div>
                        <div class="col-sm-12 mt-1 col-md-12 price-produit card-body text-start ">
                            Disponible :{{article.quantite}} <span class="col-md-6"></span>  
                        </div>
                    </div>
                </div>
    {% endfor %}
    <div class="modal fade" id="detProd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header position-relative text-center">
                    <img src="{{ asset('img/selectQte.png') }}" class="modal-img" alt="Header Image">
                    <h5 class="modal-title mx-auto" id="exampleModalLabel">Detail produit</h5>
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>

                </div>
               <div class="modal-body p-4">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="{{ asset('img/dolip.png') }}" class="img-fluid rounded" alt="Product Image" id="artImage">
                        </div>
                        <div class="col-md-8">
                            <input class="form-control" type="number" id="article_id" readonly hidden />
                            <div class="mb-3">
                                <h6 class="fw-bold">Titre :</h6>
                                <p id="artTitre" class="text-muted"></p>
                            </div>
                            <div class="mb-3">
                                <h6 class="fw-bold">Description :</h6>
                                <p id="artDesc" class="text-muted"></p>
                            </div>
                            <div class="mb-3">
                                <h6 class="fw-bold">Code Barre :</h6>
                                <p id="artCode" class="text-muted"></p>
                            </div>
                            <div class="mb-3">
                                <h6 class="fw-bold">Famille :</h6>
                                <p id="artfamile" class="text-muted"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="nonTrouve"> 
        Aucune correspondance exacte trouv√©e !
    </div>
{% endif %}