{% if articles|length > 0 %}
    {% for article in articles %}
               <div class="col-lg-2 col-md-2 p-1 col-sm-2 produit" data-bs-toggle="modal" data-bs-target="#detProd" data-id="{{article.id}}">
                    <div  class="div-img ">  
                        {# <span class="qte-produit prod1" name="prod1"> 55 </span> #}
                        <img class="img-produit " src="{{ asset('img/dolip.png') }}"  alt="Image de ">
                        <div class=" col-sm-12 name-produit Limit_text">
                            {{article.titre}}
                        </div>
                       
                        <div class="col-sm-12 mt-1 col-md-12 price-produit card-body text-start ">
                            Disponible :{{article.quantite}} <span class="col-md-6"></span>  
                        </div>
                    </div>
                </div>
       
    {% endfor %}
    <div class="modal fade" id="detProd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header position-relative text-center">
                    <img src="{{ asset('img/selectQte.png') }}" class="modal-img" alt="Header Image">
                    <h5 class="modal-title mx-auto" id="exampleModalLabel">Detail du produit</h5>
                </div>
                <div class="modal-body">
                    <input class="form-control" type="number" id="article_id" readonly hidden/>
                    <span>Titre : <i id="artTitre"></i></span> <br>
                    <span>Description :  <i id="artDesc"></i></span><br>
                    <span>Code barre :  <i id="artCode"></i></span>
                    <br>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="nonTrouve"> 
        Aucune correspondance exacte trouv√©e !
    </div>
{% endif %}
