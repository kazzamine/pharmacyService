{% extends 'base.html.twig' %}

{% block title %}suivi Commande
{% endblock %}
{% block stylesheets%}
	{{ parent()}}
	{{encore_entry_link_tags('suiviCommande')}}
{% endblock %}
{% block body %}
	<head>
		<meta charset="UTF-8">
	</head>

	<div
		class="container-fluid">
		{# list Categorie #}
		<div class="listCategorie scroll">
			<h6 class='h6-categorie text-center'>
				<a href="{{ path('app_home') }}"><img src="{{ asset('img/logo.png') }}" width='80px'/></a>
			</h6>
			<hr class="hr"/>
			<ul class="ul-link">
				<div class="input-group search-bar2 text-center">
					<button class="btn btn-success search-img text-center" type="button" id="search-icon">
						<i class="fas fa-search"></i>
					</button>
					<input type="text" class="form-control search-input2" aria-label="Search" aria-describedby="search-icon">
				</div>
				{% for familleitem in famille %}
					<div class="card sideCat justify-content-center align-items-center">
						<div class="card-body">
							<h5 class="card-title cat-title">{{familleitem.designation}}</h5>
						</div>
					</div>
				{% endfor %}
			</ul>
		</div>
		<div class='contenu_index'>
			<div class="row align-items-start container-fluid">
				<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-2 border-bottom search-container">
					<div class="input-group search-bar-modal">
						<button class="btn btn-success search-icone" type="button" id="search-icon">
							<i class="fas fa-search"></i>
						</button>
						<input type="text" class="form-control search-input" id="demmande-search" placeholder="Recherche..." aria-label="Search" aria-describedby="search-icon">
					</div>
					<div class="form-group col-12 mb-2">
						<select class="form-select search-commande" id="service" aria-label="Default select example">
							<option value="" selected>Service</option>
							{% for service in services %}
								<option value="{{ service.id }}">{{ service.nomDossier }}</option>
							{% endfor %}
						</select>
					</div>

					<div class="form-group col-12">
						<input type="date" class="form-control search-commande" id="date">
					</div>
				</div>
				<div class="row col-md-12 col-lg-12 col-sm-12 Poppins text-center demandes">
					{{ include('suivi_commande/demandes.html.twig') }}
					<div id="loader" style="display: none;"></div>

				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}{% block javascripts %}
{{ parent() }}
{{encore_entry_script_tags('suivi_commande')}}{% endblock %}
